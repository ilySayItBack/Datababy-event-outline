    <script>
        const eventData = [
            { day: "Fri (Day 1)", name: '"First Chord" Welcome Reception', capacity: "75–150 (Mid)", focus: 'Introduction to the "Human" Vision and Technology; Soft Networking Focus.', goal: 'Brand association with launch; community building.' },
            { day: "Sat (Day 2)", name: '"Amplifying Leadership" Demonstration', capacity: "150–250 (Large)", focus: 'High-Impact Demo: Live Polarity Analysis of Well-Known Figures/ACL Lineup, completed by 3 PM.', goal: 'High visibility; association with C-suite and leadership focus.' },
            { day: "Sun (Day 3)", name: '"The Psychology of Performance" Core Workshop', capacity: "150–250 (Large)", focus: 'Deep-Dive Development: Leadership Development (Blind Spots/Habits); Real-time polarity profiling, analysis, and small-group breakout exercises.', goal: 'PRESENTING SPONSOR PRIME DAY—Association with core technology and largest audience.' },
            { day: "Mon (Day 4)", name: '"Backstage Pass" Mini-Sessions', capacity: "40–100 (Intimate)", focus: 'Navigating Relationships: Small-group matching based on compatibility scores (pre-survey required).', goal: 'Targeted product demos; deeper engagement with qualified leads.' },
            { day: "Tue (Day 5)", name: '"Backstage Pass" Mini-Sessions', capacity: "40–100 (Intimate)", focus: 'Navigating Relationships: Small-group exercises and values sharing between complementary pairs.', goal: 'Targeted product demos; deeper engagement with qualified leads.' },
            { day: "Wed (Day 6)", name: '"Sound Check" Partner Events', capacity: "Partner Choice", focus: 'Sponsor-Hosted complementary session with Datababy as a featured element.', goal: 'Premium partnership opportunity; high lead capture for sponsor.' },
            { day: "Thu (Day 7)", name: '"Sound Check" Partner Events', capacity: "Partner Choice", focus: 'Sponsor-Hosted complementary session with Datababy as a featured element.', goal: 'Premium partnership opportunity; high lead capture for sponsor.' },
            { day: "Fri (Day 8)", name: '"Encore Performance" Closing Celebration', capacity: "75–150 (Mid)", focus: 'Follow-up and compatibility matching post-event. Relationship building.', goal: 'Post-event partnership; access to all event attendees for long-term nurture.' }
        ];

        const sponsorData = [
            { name: "Indeed", market: "Enterprise", industry: "HR Tech", tier: "Presenting Sponsor", price: 3000, pitch: "Sponsor the human element of the job search. We transition candidates from hired to high-performing team members." },
            { name: "Salesforce/Slack", market: "Enterprise", industry: "Productivity SaaS", tier: "Daily Event", price: 1500, pitch: "Show how your communication tools amplify the human insights Datababy provides, moving teams from chatting to performing." },
            { name: "Monday.com", market: "Enterprise", industry: "Productivity SaaS", tier: "Technology Partner", price: 1000, pitch: "Feature your tool in the Mini-Sessions, showing managers how Datababy's human data makes your project management more efficient." },
            { name: "Bumble Bizz", market: "Enterprise", industry: "Networking", tier: "Daily Event", price: 1500, pitch: "Own the relationship-building aspect of ACL Week. Your platform connects people; we teach them how to make those connections work." },
            { name: "ActivTrak", market: "Mid-Market", industry: "Productivity SaaS", tier: "Polarity Integration Partner", price: 750, pitch: "Connect why teams are productive (Polarity) to how they are tracked (ActivTrak data)." },
            { name: "Gusto", market: "Mid-Market", industry: "HR Tech", tier: "Lead Capture Partner", price: 500, pitch: "Target HR decision-makers seeking to move beyond basic payroll into proactive employee engagement." },
            { name: "Pingboard", market: "Mid-Market", industry: "HR Tech", tier: "Technology Partner", price: 1000, pitch: "Sponsor the 'Navigating Relationships' session to show how your platform visualizes the team chemistry Datababy reveals." },
            { name: "A Cloud Guru", market: "Mid-Market", industry: "L&D", tier: "Polarity Integration Partner", price: 750, pitch: "Show how Datababy helps organizations identify the right employees for your technical upskilling programs." },
            { name: "Asure Software", market: "Mid-Market", industry: "HR Tech", tier: "Lead Capture Partner", price: 500, pitch: "Access managers focused on maximizing workforce efficiency, linking Polarity data to labor management strategies." },
            { name: "NinjaOne", market: "Mid-Market", industry: "IT Operations", tier: "F&B/Logistics Partner", price: 250, pitch: "Show IT leaders how Datababy optimizes the teams running their systems, not just the systems themselves." },
            { name: "M-Files", market: "Mid-Market", industry: "Productivity SaaS", tier: "Lead Capture Partner", price: 500, pitch: "Target executives who need to eliminate 'information chaos' by first optimizing the human teams collaborating on information." },
            { name: "Kizen", market: "Mid-Market", industry: "Productivity SaaS", tier: "Technology Partner", price: 1000, pitch: "Showcase how optimized teams (using Polarity data) use your no-code tool to build powerful, efficient apps faster." },
            { name: "AlertMedia", market: "Mid-Market", industry: "Communications", tier: "F&B/Logistics Partner", price: 250, pitch: "Own the 'communication' theme at the Friday reception, connecting your brand to essential team safety and communication alignment." },
            { name: "Bonterra", market: "Mid-Market", industry: "Social Good", tier: "Lead Capture Partner", price: 500, pitch: "Target mission-driven leaders seeking to build highly effective, values-aligned teams for social good initiatives." },
            { name: "Sweeten", market: "Mid-Market", industry: "Local Business", tier: "F&B/Logistics Partner", price: 250, pitch: "Appeal to founders/executives looking to establish Austin offices, connecting team development to optimized physical space design." },
            { name: "YipitData", market: "Mid-Market", industry: "Data Tech", tier: "Lead Capture Partner", price: 500, pitch: "Pitch: Datababy analyzes human data; YipitData analyzes market data. Complementary insights for growth-stage founders." },
            { name: "Method Financial", market: "Mid-Market", industry: "FinTech", tier: "Lead Capture Partner", price: 500, pitch: "Target FinTech/HR leaders in the financial wellness space. Optimize the teams responsible for handling sensitive employee financial health." },
            { name: "Fireflies.ai", market: "Mid-Market", industry: "Productivity SaaS", tier: "Technology Partner", price: 1000, pitch: "Co-sponsor the 'Communication' panel to show how your AI captures the key Polarity-driven insights from team discussions." },
            { name: "Klaar", market: "Mid-Market", industry: "HR Tech", tier: "Polarity Integration Partner", price: 750, pitch: "Show how Datababy fills the personality and chemistry gap missing in traditional performance management dashboards." },
            { name: "Capital Factory", market: "Mid-Market", industry: "Venue", tier: "Venue Partner", price: 0, pitch: "In-kind trade for venue space to gain access to their core startup/investor network and brand halo." },
            { name: "The Austin Club", market: "Mid-Market", industry: "Venue", tier: "Venue Partner", price: 0, pitch: "In-kind trade for venue space to attract high-end C-level attendees to the Sunday Core Workshop." },
            { name: "Createscape", market: "Mid-Market", industry: "Venue", tier: "Venue Partner", price: 0, pitch: "Host one of the Mon/Tue intimate sessions to capture a different, diverse geographic segment of Austin's startup community." }
        ];

        document.addEventListener('DOMContentLoaded', () => {
            const eventContainer = document.getElementById('event-schedule-container');
            const filtersContainer = document.getElementById('filters');
            const sponsorContainer = document.getElementById('sponsor-list');

            function renderEvents() {
                eventContainer.innerHTML = eventData.map(event => `
                    <div class="flex-shrink-0 w-80 bg-white p-6 rounded-xl shadow-md border border-gray-200">
                        <p class="text-sm font-bold text-blue-600">${event.day}</p>
                        <h3 class="font-bold text-lg text-gray-900 mt-1 mb-2">${event.name}</h3>
                        <p class="text-xs font-medium text-gray-500 bg-gray-100 inline-block px-2 py-1 rounded-full mb-3">${event.capacity}</p>
                        <p class="text-sm text-gray-600 font-medium mb-1">Focus:</p>
                        <p class="text-sm text-gray-600">${event.focus}</p>
                    </div>
                `).join('');
            }

            function renderSponsors(sponsors = sponsorData) {
                sponsorContainer.innerHTML = sponsors.map(sponsor => `
                    <div class="sponsor-card bg-white p-6 rounded-xl shadow-md border border-gray-200" 
                         data-market="${sponsor.market.toLowerCase().replace(/\s/g, '-')}" 
                         data-industry="${sponsor.industry.toLowerCase().replace(/\s/g, '-')}"
                         data-tier="${sponsor.tier.toLowerCase().replace(/\s/g, '-')}"
                    >
                        <div class="flex justify-between items-start mb-2">
                             <h3 class="font-bold text-xl text-gray-900">${sponsor.name}</h3>
                             <span class="text-xs font-bold ${sponsor.market === 'Enterprise' ? 'text-purple-700 bg-purple-100' : 'text-green-700 bg-green-100'} px-2 py-1 rounded-full">${sponsor.market}</span>
                        </div>
                        <p class="text-sm font-medium text-gray-500 mb-4">${sponsor.industry}</p>
                        <p class="text-sm font-semibold text-blue-600 mb-2">${sponsor.tier} ${sponsor.price > 0 ? `(\$${sponsor.price})` : ''}</p>
                        <p class="text-gray-700 text-sm">${sponsor.pitch}</p>
                    </div>
                `).join('');
            }
            
            function setupFilters() {
                const markets = ['All', ...new Set(sponsorData.map(s => s.market))];
                const industries = ['All', ...new Set(sponsorData.map(s => s.industry))];
                
                let filterHtml = '<div class="flex flex-wrap justify-center items-center gap-2 mb-2"><span class="font-semibold text-sm mr-2">Market:</span>';
                filterHtml += markets.map(m => `<button class="filter-btn text-sm font-medium px-3 py-1.5 rounded-full ${m === 'All' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" data-filter-type="market" data-filter-value="${m.toLowerCase().replace(/\s/g, '-')}">${m}</button>`).join('');
                filterHtml += '</div>';

                filterHtml += '<div class="flex flex-wrap justify-center items-center gap-2"><span class="font-semibold text-sm mr-2">Industry:</span>';
                filterHtml += industries.map(i => `<button class="filter-btn text-sm font-medium px-3 py-1.5 rounded-full bg-gray-200 text-gray-700 hover:bg-gray-300" data-filter-type="industry" data-filter-value="${i.toLowerCase().replace(/\s/g, '-')}">${i}</button>`).join('');
                filterHtml += '</div>';

                filtersContainer.innerHTML = filterHtml;

                filtersContainer.querySelectorAll('.filter-btn').forEach(button => {
                    button.addEventListener('click', () => {
                        const filterType = button.dataset.filterType;
                        const filterValue = button.dataset.filterValue;

                        document.querySelectorAll(`[data-filter-type="${filterType}"]`).forEach(btn => {
                            btn.classList.remove('bg-blue-600', 'text-white');
                            btn.classList.add('bg-gray-200', 'text-gray-700');
                        });
                        button.classList.add('bg-blue-600', 'text-white');
                        button.classList.remove('bg-gray-200', 'text-gray-700');
                        
                        applyFilters();
                    });
                });
            }

            function applyFilters() {
                const activeMarketFilter = document.querySelector('[data-filter-type="market"].bg-blue-600').dataset.filterValue;
                const activeIndustryFilter = document.querySelector('[data-filter-type="industry"].bg-blue-600')?.dataset.filterValue || 'all';

                document.querySelectorAll('.sponsor-card').forEach(card => {
                    const marketMatch = activeMarketFilter === 'all' || card.dataset.market === activeMarketFilter;
                    const industryMatch = activeIndustryFilter === 'all' || card.dataset.industry === activeIndustryFilter;

                    if (marketMatch && industryMatch) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            }

            function renderCharts() {
                const enterpriseCount = sponsorData.filter(s => s.market === 'Enterprise').length;
                const midMarketCount = sponsorData.filter(s => s.market === 'Mid-Market').length;

                new Chart(document.getElementById('sponsorMixChart'), {
                    type: 'doughnut',
                    data: {
                        labels: ['Enterprise', 'Mid-Market'],
                        datasets: [{
                            data: [enterpriseCount, midMarketCount],
                            backgroundColor: ['#6366F1', '#22C55E'],
                            borderColor: '#ffffff',
                            borderWidth: 4,
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { position: 'bottom' } }
                    }
                });
                
                const midMarketTiers = sponsorData.filter(s => s.market === 'Mid-Market' && s.price > 0);
                const tierData = midMarketTiers.reduce((acc, s) => {
                    acc[s.tier] = (acc[s.tier] || 0) + s.price;
                    return acc;
                }, {});

                new Chart(document.getElementById('tierValueChart'), {
                    type: 'bar',
                    data: {
                        labels: Object.keys(tierData),
                        datasets: [{
                            label: 'Value ($)',
                            data: Object.values(tierData),
                            backgroundColor: ['#3B82F6', '#8B5CF6', '#EC4899', '#F59E0B'],
                            borderRadius: 6
                        }]
                    },
                     options: {
                        indexAxis: 'y',
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { display: false } },
                        scales: { x: { beginAtZero: true } }
                    }
                });
            }

            renderEvents();
            renderSponsors();
            setupFilters();
            applyFilters(); 
            renderCharts();
        });
    </script>
</body>
</html>
